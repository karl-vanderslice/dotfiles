# EditorConfig helps maintain consistent coding styles across different editors and IDEs.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# --- YAML: Red Hat Best Practices ---
# - 2 spaces for indentation
# - LF for line endings
# - No trailing whitespace
[*.yml]
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf

[*.yaml]
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf

# --- Shell: ShellCheck & shfmt Best Practices ---
# - Tabs for indentation (shfmt default)
# - LF for line endings
# - No trailing whitespace
[*.sh]
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# --- JSON, JavaScript, TypeScript (2 spaces per indentation level) ---
[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

# --- Markdown: Do not trim trailing whitespace ---
[*.md]
trim_trailing_whitespace = false

# --- Makefiles: Must use tabs ---
[Makefile]
indent_style = tab

# --- Ignore binary & minified files ---
[*.min.*]
indent_style = ignore
